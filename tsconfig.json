{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "playwright", "@cucumber/cucumber"]
  },
  "include": [
    "tests/**/*.ts",
    "helpers/**/*.ts",
    "pages/**/*.ts",
    "tests/example.spec.ts",
    "features/**/*.ts"
  ]
}